<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="16dp"
        android:text="Choose Subscription"
        android:textAlignment="center"

        android:textColor="@color/Black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="196dp"
        android:layout_height="36dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="29dp"
        android:text="Payment Information"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="125dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:srcCompat="@drawable/visa_mastercard" />

    <EditText
        android:id="@+id/edFirstName"
        android:background="#11000000"
        android:layout_width="310dp"
        android:layout_height="42dp"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="  Credit Card Number"
        android:inputType="textCapWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edEmailAdress"
        android:layout_width="310dp"
        android:background="#11000000"
        android:layout_height="42dp"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="  Name On Card"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edFirstName" />

    <EditText
        android:id="@+id/edLastName"
        android:layout_width="145dp"
        android:layout_height="42dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="  MM/YY"
        android:background="#11000000"
        android:inputType="textCapWords"
        app:layout_constraintEnd_toStartOf="@+id/edCVV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edEmailAdress" />

    <EditText
        android:id="@+id/edCVV"
        android:layout_width="145dp"
        android:layout_height="42dp"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:background="#11000000"
        android:hint="  CVV"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edLastName"
        app:layout_constraintTop_toBottomOf="@+id/edEmailAdress" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="70dp"
        android:layout_height="29dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="84dp"

        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="138dp"
        android:layout_height="42dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/rounded_corners"
        android:text="Pay"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edLastName" />

    <Button
        android:id="@+id/button3"
        android:layout_width="138dp"
        android:layout_height="42dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/rounded_corners"
        android:text="Back"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edCVV" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:layout_marginEnd="57dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="38dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/graylight"
            android:layout_weight="1"
            android:text="$9.99 Monthly" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/graylight"
            android:layout_weight="1"
            android:text="$39.99 Yearly" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="159dp"
        android:layout_height="29dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="71dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>
